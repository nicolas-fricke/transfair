<%- model_class = Job -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl> <%# dl-horizontal did not work fine with empty fields #%>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @job.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:client_name) %>:</strong></dt>
  <% if @job.client == nil %>
    <dd><%= '' %></dd>
  <% else %>
    <dd><%= @job.client.full_name %></dd>
  <% end %>

  <dt><strong><%= model_class.human_attribute_name(:deadline_client) %>:</strong></dt>
  <dd><%= @job.deadline_client %></dd>

  <dt><strong><%= model_class.human_attribute_name(:deadline_intern) %>:</strong></dt>
  <dd><%= @job.deadline_intern %></dd>

  <dt><strong><%= model_class.human_attribute_name(:job_type) %>:</strong></dt>
  <% if @job.job_type == nil %>
    <dd><%= '' %></dd>
  <% else %>
    <dd><%= @job.job_type.name %></dd>
  <% end %>

  <dt><strong><%= model_class.human_attribute_name(:job_status) %>:</strong></dt>
  <% if @job.job_status == nil %>
    <dd><%= '' %></dd>
  <% else %>
    <dd><%= @job.job_status.name %></dd>
  <% end %>

  <dt><strong><%= model_class.human_attribute_name(:client_paid) %>:</strong></dt>
  <dd><%= @job.client_paid %></dd>

  <dt><strong><%= model_class.human_attribute_name(:rating) %>:</strong></dt>
  <dd><%= @job.rating %></dd>

  <dt><strong><%= model_class.human_attribute_name(:rating_text) %>:</strong></dt>
  <dd><%= @job.rating_text %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              jobs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_job_path(@job), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              job_path(@job),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
